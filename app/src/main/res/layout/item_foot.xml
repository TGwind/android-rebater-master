<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_steps"
    android:paddingStart="8dp"
    android:background="@drawable/dra_points"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/text_greps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/content"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        android:textColor="@color/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/coin_icon"
            android:layout_width="24dp"
            android:layout_gravity="center"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/points"
            android:layout_marginStart="4dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="+1600.08"
            android:textColor="@color/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/status"
            android:layout_marginEnd="18dp"
            android:textSize="18sp"
            android:layout_gravity="end|center"
            android:text="@string/progress"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/status_img"
            android:layout_width="32dp"
            android:visibility="gone"
            android:layout_gravity="end|center"
            android:layout_marginEnd="18dp"
            android:src="@drawable/locking_icon"
            android:layout_height="32dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/progress_layout"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content">
        <ProgressBar
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:progressDrawable="@drawable/dra_color"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/progress_cr"
            android:layout_width="match_parent"
            android:layout_height="22dp"/>
        <TextView
            android:id="@+id/minuets_used"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="0 minutes used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>